<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qualengine.RefineryController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <children>
            <VBox>
                <children>
                    <Label text="Refinery Queue">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label text="Queue files for processing." textFill="#7f8c8d" />
                </children>
            </VBox>
            <AnchorPane HBox.hgrow="ALWAYS" />

            <TextField fx:id="txtFilter" promptText="Filter files..." />

            <Button mnemonicParsing="false" onAction="#onAddFile" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-insets: 0;" text="+ Add Files">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
                <padding>
                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                </padding>
            </Button>
        </children>
    </HBox>

    <TableView fx:id="jobTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            <TableColumn fx:id="colName" prefWidth="250.0" text="Source Name" />
            <TableColumn fx:id="colType" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="colProgress" prefWidth="150.0" text="Progress" />
            <TableColumn fx:id="colAction" prefWidth="60.0" style="-fx-alignment: CENTER;" text="Action" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <children>
            <Button fx:id="btnProcess" mnemonicParsing="false" onAction="#onProcessQueue" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-insets: 0;" text="Start Processing">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </padding>
            </Button>
        </children>
    </HBox>

</VBox>